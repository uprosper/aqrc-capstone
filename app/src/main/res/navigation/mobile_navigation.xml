<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_scan">

    <fragment
        android:id="@+id/navigation_scan"
        android:name="com.example.aqrc.ui.scan.ScanFragment"
        android:label="@string/title_scan"
        tools:layout="@layout/fragment_scan" />

    <fragment
        android:id="@+id/navigation_generate"
        android:name="com.example.aqrc.ui.generate.GenerateCodeFragment"
        android:label="@string/title_generate"
        tools:layout="@layout/fragment_generate_code" />

    <fragment
        android:id="@+id/navigation_history"
        android:name="com.example.aqrc.ui.history.NotificationsFragment"
        android:label="@string/title_history"
        tools:layout="@layout/fragment_history" />
</navigation>